<!DOCTYPE html>
<html ng-app="myApp">
<head>
  <title>Budget Management - Expenses</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
  <script src="js/app.js"></script>
  <script src="js/controllers/homeController.js"></script>
  <script src="js/controllers/expensesController.js"></script>
  <script src="js/controllers/incomesController.js"></script>
  <script src="js/controllers/reportsController.js"></script>
  <script src="js/services/transactionsService.js"></script>
  <link rel="stylesheet" href="css/style.css">
</head>

<body ng-controller="expensesController">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Budget Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/expenses">Expenses</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/incomes">Incomes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/reports">Reports</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <h1>Expenses</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="transaction in transactions">
              <td ng-hide="transaction.editing">{{transaction.name}}</td>
              <td ng-show="transaction.editing"><input type="text" ng-model="transaction.name" /></td>
              <td ng-hide="transaction.editing">{{transaction.amount}}</td>
              <td ng-show="transaction.editing"><input type="number" ng-model="transaction.amount" /></td>
              <td>{{transaction.date | date:"dd/MM/yyyy"}}</td>
              <td>
                <a class="btn btn-sm btn-primary" ng-hide="transaction.editing" ng-click="editExpense($index)">Edit</a>
                <a class="btn btn-sm btn-primary" ng-show="transaction.editing" ng-click="saveExpense($index)">Save</a>
                <a class="btn btn-sm btn-danger" ng-show="transaction.editing" ng-click="cancelEdit($index)">Cancel</a>
                <a class="btn btn-sm btn-danger" ng-hide="transaction.editing"
                  ng-click="deleteTransaction(transaction)">Delete</a>
              </td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <a href="/" class="btn btn-primary">Add Expense</a>
      </div>
    </div>
  </div>

  <footer class="mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p>&copy; Budget Management 2023</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>