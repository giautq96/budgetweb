<!DOCTYPE html>
<html ng-app="myApp">
<head>
  <title>Budget Management</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
  <script src="js/app.js"></script>
  <script src="js/controllers/expensesController.js"></script>
  <script src="js/controllers/homeController.js"></script>
  <script src="js/controllers/incomesController.js"></script>
  <script src="js/controllers/reportsController.js"></script>
  <script src="js/services/transactionsService.js"></script>
  <link rel="stylesheet" href="css/style.css">
</head>

<body ng-controller="homeController">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Budget Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/expenses">Expenses</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/incomes">Incomes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/reports">Reports</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <h1>Budget Management</h1>
        <p>Here you can manage your expenses and incomes to keep track of your budget.</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h2>Add an Expense</h2>
        <form>
          <div class="form-group">
            <label for="expense-name">Name:</label>
            <input type="text" class="form-control" ng-model="expense.name" name="expense-name" required>
          </div>
          <div class="form-group">
            <label for="expense-amount">Amount:</label>
            <input type="number" class="form-control" ng-model="expense.amount" name="expense-amount" required>
          </div>
          <div class="form-group">
            <label for="expense-date">Date:</label>
            <input type="date" class="form-control" ng-model="expense.date" name="expense-date" required>
          </div>
          <button type="submit" class="btn btn-primary" ng-click="addExpense()">Add Expense</button>
        </form>
      </div>
      <div class="col-md-6">
        <h2>Add an Income</h2>
        <form>
          <div class="form-group">
            <label for="income-name">Name:</label>
            <input type="text" class="form-control" ng-model="income.name" name="income-name" required>
          </div>
          <div class="form-group">
            <label for="income-amount">Amount:</label>
            <input type="number" class="form-control" ng-model="income.amount" name="income-amount" required>
          </div>
          <div class="form-group">
            <label for="income-date">Date:</label>
            <input type="date" class="form-control" ng-model="income.date" name="income-date" required>
          </div>
          <button type="submit" class="btn btn-primary" ng-click="addIncome()">Add Income</button>
        </form>
      </div>
    </div>
  </div>
  <footer class="mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p>&copy; Budget Management 2023</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>